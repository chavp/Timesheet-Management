    ViewBag.Title = "Timesheet";
}

@Html.Partial("_BasicTemplate", new PJ_CWN019.TM.Web.Models.TemplateView
    {
        MainPanelID = "timesheetPanel",
        MainIcon = "glyphicon glyphicon-time",
        MainTitle = "Timesheet",
    })

@section scripts{
    <script>
        paramsView.urlReadProject = '@Url.Content("~/Timesheet/GetAllProject")';
        paramsView.urlGetTimesheet = '@Url.Content("~/Timesheet/GetTimesheet")';
        paramsView.urlGetAllPhase = '@Url.Content("~/Timesheet/GetAllPhase")';
        paramsView.urlGetAllTaskType = '@Url.Content("~/Timesheet/GetAllTaskType")';
        paramsView.urlGetMainTask = '@Url.Content("~/Timesheet/GetMainTask")';

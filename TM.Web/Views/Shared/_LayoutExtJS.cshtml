<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

@*    @Styles.Render("~/Content/themes/base/css")*@
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/css/extjs")
@*    @Styles.Render("~/Content/themes/jqGrid.bootstrap/css")*@
    @Scripts.Render("~/bundles/modernizr")

    <style>
        #header {
            width: 100%;
            height: 86px;
            overflow: hidden;
            margin: 0px auto 0px auto;
            padding-top: 0px;
            top: 0px;
        }

        #header .topr .logoleft {
            float: left;
            padding: 6px 0px 6px 20px;
            font-family: arial;
            font-size: 16px;
            color: #0079C2;
        }

        .logoright {
            float: right;
            padding: 6px 10px 6px 0px;
        }

        #logOffForm {
            float: right;
            padding: 0;
        }

        #footer {
            clear: both;
            width: 100%;
            padding: 4px 0px 4px 0px;
            vertical-align: top;
            margin: 0;
            border-top: 1px solid #CCCCCC;
        }

    #footer .bar {
        width: 1250px;
        margin: 0px auto;
    }

        #footer .bar .left {
            float: left;
            padding: 4px 0 4px 4px;
            vertical-align: top;
            font-size: 8pt;
        }

        #footer .bar .right {
            text-align: right;
            padding: 4px 4px 4px 0;
            float: right;
            vertical-align: top;
            font-size: 8pt;
        }
    </style>
</head>
<body>

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/extjs")
    @*@Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqGrid.bootstrap")*@
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>
